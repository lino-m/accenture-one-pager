<section id="hero-area">
  <div class="container-headlines">
    <div class="headline-hero acc-line">
      <p>LET THERE BE CHANGE</p>
    </div>
    <div class="headline-hero my-line">
      <p>AND A JOURNEY</p>
    </div>
  </div>

  <!-- Scroll Prompt -->
  <span class="scroll-btn">
    <a href="#">
      <span class="mouse">
        <span>
        </span>
      </span>
    </a>
